{{ define "body" }}
    <style> alignment: [center, center] </style>
    <row eid="data">
        {{ template "counter" . }}
        {{ template "counter" . }}
        {{ template "counter" . }}
    </row>
    <row>
        <style> height: 1 </style>
        <button on-submit="GET /; select #data; swap in #body">Reset</button>
        <button>
            <script>
                function on_submit()
                    confirm(
                        "Are you sure?",
                        "Deleting files is bad",
                        function(success)
                            if success then alert("deleted file") end
                        end
                    )
                end
            </script>
            Alert
        </button>
        <button>
            Add Prompt
            <script>
                function on_submit()
                    prompt(
                        "What is your opinion?",
                        {
                            w.Field{
                                name="name",
                                placeholder="Name...",
                                groups={"one", "two"},
                            },
                            w.Checkbox{name="true", "Are you true?"},
                            w.Checkbox{name="false", "Are you false?"},
                        },
                        chocl("POST /prompt; SWAP #data")
                    )
                end
            </script>
        </button>
    </row>
{{ end }}
