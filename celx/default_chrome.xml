<user-chrome>
    <component name="dense-button">
        <button>
            <style>
                frame: null
            </style>
            <_slot/>
        </button>
    </component>
    <component name="location-bar">
        <field eid="location">
            <style>
                width: 60
                fill_style: '@main.panel1'
            </style>
            <script>
                function init()
                    self.bind("return", function() app.route(self.value) end)
                    self.value = app.url
                end
            </script>
        </field>
    </component>
    <row eid="chrome">
        <script>
            expanded = true

            function init()
                self.add_group("expanded")

                on_change("expanded", function(val)
                    if val then
                        self.add_group("expanded")
                    else
                        self.remove_group("expanded")
                    end
                end)
            end
        </script>
        <style>
            height: 0
            frame: [padded, null, padded, null]
            
            .expanded:
                height: 1

            /hover:
                height: 1
        </style>
        <text>
            <script>
                offset = -1

                function pre_build()
                    offset = app.history_offset
                end
            </script>
            celx v1.0 - $offset
        </text>
        <row>
            <style>
                gap: 1
                width: shrink
            </style>
            <location-bar></location-bar>
            <dense-button>
                <script>
                    function on_submit()
                        app.refresh()
                    end
                </script>
                ‚ü≥
            </dense-button>
            <dense-button>
                <script>
                    function pre_build()
                        self.disabled = len(app.history) &lt;= app.history_offset + 1
                    end

                    function on_submit()
                        app.back()
                    end
                </script>
                &lt;
            </dense-button>
            <dense-button>
                <script>
                    function pre_build()
                        self.disabled = app.history_offset == 0
                    end

                    function on_submit()
                        app.forward()
                    end
                </script>
                &gt;
            </dense-button>
        </row>
        <button eid="collapse">
            <script>
                content = "-"

                function on_submit()
                    expanded = not expanded
                    if expanded then content = "-" else content = "+" end
                end
            </script>
            <style>
                anchor: screen
                offset: ["end", "start"]
                layer: 10
                width: 5
            </style>
            $content
        </button>
    </row>
</user-chrome>
